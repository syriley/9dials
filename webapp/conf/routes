# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Import Secure routes
*       /auth       module:securesocial

# Home page
GET     /                                       Application.index

# Import CRUD routes
# Administration
*       /admin/crud                                  module:crud

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                	staticDir:public
GET 	/tabs/show/{id}								Tabs.show
GET 	/tabs/list/{artist}				 			Tabs.list
# Catch all

#FB App
GET     /fb/canvas/                                	Sources.index
POST    /fb/canvas/                               	Sources.index
POST    /fb/canvas/wall                             Sources.index
GET     /fb/canvas/wall                             Sources.index
GET     /fb/canvas/myclips/{sourceId}			  	MyClips.index
POST    /fb/canvas/myclips/{sourceId}			  	MyClips.index
GET     /wall                                      	Sources.index
GET     /share/{sourceId}							Share.index
GET     /myclips/{sourceId}							MyClips.index

#collaborate (old)
GET     /collaborate/index   						Collaborate.index
GET     /collaborate/index/{id}   					Collaborate.index
GET     /collaborate/share/{id}/{access}   			Collaborate.share

#Sessions
GET     /sessions/index     						Sessions.index
GET		/sessions/new								Sessions.create
GET     /sessions/edit/{id} 						Sessions.form

#API
POST	/api/tracks									Tracks.create
PUT		/api/tracks									Tracks.update

POST	/api/regions								Regions.create
PUT		/api/regions								Regions.update

GET    	/api/sessions  								Sessions.indexJson
GET    	/api/sessions/{id} 							Sessions.showJson
POST    /api/sessions/{id} 							Sessions.saveData
PUT     /api/sessions/{id}                          Sessions.update
GET     /api/instruments 							Instruments.list
GET     /api/users 									Users.list
GET     /api/users/validate 						Users.validate
GET     /api/images/{id}    						PictureServer.getPicture

#User management

GET		/welcome									NewUser.index
GET     /loginrouter    							Application.loginRouter
GET     /fakefblogin    							Application.fakeLogin                      
POST    /api/sources 								Sources.upload
POST    /api/facebooksources						FacebookSources.upload
POST    /bands/?             						Bands.create
POST    /tabs/?             						Tabs.create

*       /me/{username}                  			PublicProfile.profile

*       /admin/{controller}/{action}            	admin.{controller}.{action}
*       /{controller}/{action}                  	{controller}.{action}
*       /{controller}                  				{controller}.index
