# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Import Secure routes
*       /auth       module:securesocial

# Home page
GET     /                                       Application.index

# Administration
*       /admin                                  module:crud

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public
GET 	/tabs/show/{id}							Tabs.show
GET 	/tabs/list/{artist}				 			Tabs.list
# Catch all

WS   /helloSocket            MyWebSocket.hello

#Sessions

GET     /collaborate/index   Collaborate.index
GET     /collaborate/index/{id}   Collaborate.index
GET     /collaborate/share/{id}/{access}   Collaborate.share
GET     /sessions/index     Sessions.index
GET		/sessions/new		Sessions.form
POST	/sessions/new		Sessions.save
GET     /sessions/{id}      Sessions.app
GET     /sessions/edit/{id} Sessions.form
GET     /api/sessions/{id} 	Sessions.appJson
POST    /api/sessions/{id} 	Sessions.saveData
GET     /api/instruments 	Instruments.list
GET     /api/users 			Users.list
GET     /api/images/{id}    PictureServer.getPicture
POST    /api/sessions/track/ FileService.uploadAudio
GET     /loginrouter    Application.loginRouter
GET     /fakefblogin    Application.fakeLogin                      


POST    /bands/?             Bands.create
POST    /tabs/?             Tabs.create

# Import CRUD routes
*      /admin              module:crud

*       /{controller}/{action}                  {controller}.{action}

*       /{controller}                  {controller}.index